@model IEnumerable<MyTunes.Models.Artist>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<a asp-controller="Artist" asp-action="Create">Create Artist</a>
<form asp-controller="Artist" asp-action="Details" method="get">
    <select id="Id" name="Id"  class="form-control" style="width:20%">
    @foreach (var item in Model)
    {
        <option value="@item.Id">@item.Name</option>
    }
    </select>
    <input type="submit" value="Filter"  class="btn btn-primary"/>
</form>
