@model MyTunes.Models.Rating

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Rating</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @{
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="UserId" class="control-label"></label>
                    @{
                        if (Model.Id > 0)
                        {
                            <input type="hidden" asp-for="UserId" />
                            <select asp-for="UserId" class="form-control" asp-items="ViewBag.Users" disabled="disabled"></select>
                        }
                        else
                        {
                            <select asp-for="UserId" class="form-control" asp-items="ViewBag.Users"></select>
                        }
                    }

                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SongId" class="control-label"></label>
                    @{
                        if (Model.Id > 0)
                        {
                            <input type="hidden" asp-for="SongId" />
                            <select asp-for="SongId" class="form-control" asp-items="ViewBag.Songs" disabled="disabled"></select>
                        }
                        else
                        {
                            <select asp-for="SongId" class="form-control" asp-items="ViewBag.Songs"></select>
                        }
                    }

                    <span asp-validation-for="SongId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Rating1" class="control-label"></label>
                    <input asp-for="Rating1" type="number" class="form-control" />
                    <span asp-validation-for="Rating1" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            }

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
